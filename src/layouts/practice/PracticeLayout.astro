---
import PracticeContent from "../../components/practice/PracticeContent.astro";
import PracticeDecoBottom from "../../components/practice/PracticeDecoBottom.astro";
import PracticeHeader from "../../components/practice/PracticeHeader.astro";
import { useTranslations } from "../../i18n/utils";
import Layout from "../Layout.astro";

const lang = Astro.currentLocale as "fr" | "en";
const t = useTranslations(lang);

const description =
  "fr" === lang
    ? "Pratique hebdomadaire de solo jazz."
    : "Weekly solo jazz practice.";

const keywords =
  "fr" === lang ? ["pratique", "solo jazz"] : ["practice", "solo jazz"];
---

<Layout
  title={t("page.practice.title")}
  description={description}
  keywords={keywords}
  class="bg-amber-400"
>
  <PracticeHeader />
  <div class="flex flex-grow">
    <PracticeContent />
  </div>
  <PracticeDecoBottom />
</Layout>
