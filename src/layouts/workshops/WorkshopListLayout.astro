---
import { useTranslations } from "../../i18n/utils";
import Layout from "../Layout.astro";

import WorkshopDecoBottom from "../../components/workshops/WorkshopDecoBottom.astro";
import WorkshopList from "../../components/workshops/WorkshopList.astro";
import WorkshopListHeader from "../../components/workshops/WorkshopListHeader.astro";

const lang = Astro.currentLocale as "fr" | "en";
const t = useTranslations(lang);
---

<Layout title={t("workshops.title") + " | Backbeat"} class="bg-pink-400">
  <WorkshopListHeader />
  <div class="flex flex-grow">
    <WorkshopList />
  </div>
  <WorkshopDecoBottom />
</Layout>
