---
import { useTranslations } from "../../i18n/utils";

interface Props {
  frontColor: string;
}

const lang = Astro.currentLocale as "fr" | "en";
const t = useTranslations(lang);

const { frontColor } = Astro.props;
---

<span
  class="p-8 text-xl text-white rounded-lg border-2"
  style={`border-color: ${frontColor}; color: ${frontColor};`}
>
  {t("action.save-the-date")}
</span>
