---
import { type ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
  image: ImageMetadata;
  alt: string;
}

const { image, alt } = Astro.props;
---

<section class="w-full lg:max-h-[640px] overflow-hidden mb-8">
  <Image
    src={image}
    alt={alt}
    class="w-full mt-[-120px] object-none lg:object-cover"
  />
</section>
