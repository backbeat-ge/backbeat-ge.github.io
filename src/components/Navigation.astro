---
import {
  Astronav,
  Dropdown,
  DropdownItems,
  MenuIcon,
  MenuItems,
} from "astro-navbar";
import { Image } from "astro:assets";
import { getRelativeLocaleUrl } from "astro:i18n";

import { useTranslations } from "../i18n/utils";
import logoImage from "../images/logo.png";

const lang = Astro.currentLocale as "fr" | "en";
const t = useTranslations(lang);
---

<header class="lg:flex p-5 gap-5">
  <Astronav>
    <div class="flex w-full justify-between">
      <a href={getRelativeLocaleUrl(lang, "")} class="p-2">
        <Image src={logoImage} alt="Our logo" class="h-12 w-auto" />
      </a>
      <div class="block lg:hidden">
        <MenuIcon class="w-4 h-4 text-gray-800" />
      </div>
    </div>
    <MenuItems class="hidden lg:flex">
      <ul class="flex flex-col lg:flex-row lg:gap-5">
        <li><a href={getRelativeLocaleUrl(lang, "")}>{t("nav.home")}</a></li>
        <li>
          <Dropdown class="group">
            <button class="flex items-center">
              <span>{t("nav.association")}</span>
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="3"
                stroke="currentColor"
                class="w-3 h-3 mt-0.5 group-open:rotate-180"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
              </svg>
            </button>
            <DropdownItems class="relative">
              <div class="absolute top-0">
                <ul>
                  <li>
                    <a href={getRelativeLocaleUrl(lang, "association/charte")}
                      >{t("nav.charte")}</a
                    >
                  </li>
                </ul>
              </div>
            </DropdownItems>
          </Dropdown>
        </li>
        <li>
          <a href={getRelativeLocaleUrl(lang, "events")}>Cours</a>
        </li>
        <li>
          <a href={getRelativeLocaleUrl(lang, "events")}>{t("nav.events")}</a>
        </li>
      </ul>
    </MenuItems>
  </Astronav>
</header>
